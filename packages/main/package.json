{
  "name": "@egos/main",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "main": "/dist/index.js",
  "typings": "./typing.d.ts",
  "scripts": {
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "build": "tsc",
    "dev": "concurrently 'npm run watch'  'npm run start' ",
    "postinstall:todo": "electron-builder install-app-deps",
    "rebuild-db": "electron-rebuild -f -w sqlite3",
    "start": "cross-env NODE_ENV=development DEBUG=@egos/lite:* nodemon --delay 1000ms --watch dist --exec electron  dist/index.js --trace-warnings",
    "watch": "tsc -w"
  },
  "dependencies": {
    "@egos/lite": "workspace:^",
    "@egos/storage": "workspace:^",
    "ajv": "^8.12.0",
    "await-lock": "^2.2.2",
    "bson-objectid": "^2.0.4",
    "concurrently": "^7.6.0",
    "crypto-js": "^4.1.1",
    "electron-context-menu": "^3.6.1",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "express": "^4.18.2",
    "express-http-proxy": "^1.6.3",
    "file-type": "^16.5.3",
    "get-port": "^5.1.1",
    "js-yaml": "^4.1.0",
    "lru-cache": "^10.0.0",
    "mime": "^3.0.0",
    "tldr": "^3.3.8",
    "torrent-search-api": "^2.1.4",
    "webtorrent": "^2.0.14"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.1.1",
    "@types/express": "^4.17.17",
    "@types/express-http-proxy": "^1.6.3",
    "@types/js-yaml": "^4.0.5",
    "@types/mime": "^3.0.1",
    "@types/multer": "^1.4.7",
    "electron": "^18.3.15",
    "electron-builder": "^23.6.0",
    "electron-rebuild": "^3.2.9",
    "multer": "1.4.5-lts.1",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.4"
  },
  "build": {
    "artifactName": "${productName}-${version}.${ext}",
    "productName": "egos",
    "appId": "mullberry10th@gmail.com",
    "compression": "maximum",
    "asar": false,
    "nodeGypRebuild": false,
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "./dist/",
      "../renderer/dist/"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.icns",
      "target": [
        "deb"
      ]
    }
  }
}
