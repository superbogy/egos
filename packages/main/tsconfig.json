{
  "compilerOptions": {
    "target": "es2020",
    "module": "Node16",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "baseUrl": "./",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
